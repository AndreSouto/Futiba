<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="andreluis.futiba.MainActivity">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="andreluis.futiba.MenuActivity"
    android:background="#ededed"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:elevation="@dimen/abc_action_bar_overflow_padding_end_material"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="390dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="390dp"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="50dp"
                android:background="#4db6ac"
                android:elevation="0dp"
                android:scaleType="fitXY"/>


            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                />


            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="10dp"
                android:id="@+id/buttonFoto"
                android:background="#00ffffff"
                android:clickable="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:id="@+id/imageView4"
                android:src="@drawable/settings"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-10dp"/>


        </FrameLayout>


    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/space1"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout2"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:layout_below="@+id/space1"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAvisos"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:src="@drawable/aviso"
            android:background="#00ffffff"
            android:elevation="0dp"
            android:clickable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonAvisos"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

    </LinearLayout>


    <ImageView
        android:layout_width="600dp"
        android:layout_height="10dp"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/imageView5"
        android:background="#4db6ac"
        android:elevation="5dp" />

    <Space
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/space2"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/space2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageDescobertas"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:src="@drawable/descoberta"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonDescobertas"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="10dp"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/imageView6"
        android:background="#4db6ac"
        android:elevation="5dp" />

    <Space
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/space3"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:visibility="visible"
        android:id="@+id/linearLayout4"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/space3"
        android:layout_alignParentStart="true"
        android:elevation="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAgenda"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:src="@drawable/agenda"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonAgenda"
            android:background="#00ffffff" />

    </LinearLayout>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="10dp"
        android:layout_marginTop="430dp"
        android:id="@+id/imageView7"
        android:background="#4db6ac"
        android:elevation="5dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/buscar"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160sp"
        android:layout_height="59sp"
        android:id="@+id/button"
        android:background="#00ffffff"
        android:clickable="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

        <!-- Listview to display slider menu -->

        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#f6f6f6"
            android:choiceMode="singleChoice"
            android:divider="#2d2b28"
            android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>


