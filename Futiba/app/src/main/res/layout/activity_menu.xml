<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/futiba05instructions"
    tools:context="andreluis.futiba.MenuActivity">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="andreluis.futiba.MenuActivity"
    android:background="#00ededed"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ffffff"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:elevation="0dp"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="390dp"
            android:layout_height="100dp">


            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/image"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="137dp"
                android:layout_marginTop="3dp"
                />


            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:id="@+id/buttonFoto"
                android:background="#00ffffff"
                android:clickable="true" />

            <Button
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:src="@drawable/settings"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="0dp"
                android:background="#00ffffff" />


        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout2"
        android:background="#00ffffff"
        android:orientation="horizontal"
        android:elevation="0dp"
        android:layout_marginTop="140dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:id="@+id/Avisos"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:background="#00ffffff"
            android:elevation="0dp"
            android:clickable="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/imageAvisos"
                android:background="#ffffff"
                android:clickable="true"
                android:elevation="0dp"
                android:layout_marginTop="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#00ffffff"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="260dp"
        android:elevation="0dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:id="@+id/Descobertas"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/imageDescobertas"
            android:background="#ffffff"
            android:clickable="true"
            android:elevation="0dp"
            android:layout_marginTop="30dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#00ffffff"
        android:visibility="visible"
        android:id="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:layout_marginTop="375dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:id="@+id/Agenda"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:background="#00ffffff"
            android:clickable="true"
            android:elevation="0dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/imageAgenda"
            android:background="#ffffff"
            android:clickable="true"
            android:elevation="0dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <Button
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:id="@+id/button"
        android:background="#00ffffff"
        android:clickable="true"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

        <!-- Listview to display slider menu -->

        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#f6f6f6"
            android:choiceMode="singleChoice"
            android:divider="#2d2b28"
            android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>


