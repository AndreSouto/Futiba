<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4db6ac"
    tools:context="andreluis.futiba.PerfilActivity"
    android:elevation="24dp"
    android:keepScreenOn="false"
    android:layout_centerHorizontal="false"
    android:layout_alignWithParentIfMissing="false"
    android:layout_centerInParent="false">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/madelhagentboa"
        android:id="@+id/medalha2"
        android:layout_alignBottom="@+id/medalha1"
        android:layout_alignTop="@id/medalha1"
        android:layout_alignEnd="@+id/bomdBola"
        android:layout_below="@+id/bomdBola"
        android:layout_toEndOf="@+id/posicaoPreferida" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/fbImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="47dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/circle2"
        android:layout_marginStart="128dp"
        android:layout_marginTop="47dp"
        android:clickable="false"
        android:color="#4db6ac"
        android:id="@+id/fbImageView" />


    <TextView
        android:text="Bom de Bola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bomdBola"
        android:textColor="#ffffff"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/posicaoPreferida"
        android:layout_marginStart="17dp" />

    <TextView
        android:text="Gente Boa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genteBoa"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/bomdBola"
        android:layout_alignBottom="@+id/bomdBola"
        android:layout_alignStart="@+id/medalha1"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medalha1"
        android:id="@+id/intMedalhasGB"
        android:textSize="24sp"
        android:layout_alignEnd="@+id/medalha1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/medalhabomdbola"
        android:layout_marginTop="20dp"
        android:id="@+id/medalha1"
        android:layout_alignTop="@+id/fbImage"
        android:layout_toStartOf="@+id/filosofiaFixo" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="35dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/brancoPosicao"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/jogaGol"
        android:layout_alignStart="@+id/posicaoPreferida" />

    <TextView
        android:text="Filosofia de Vida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filosofiaFixo"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/brancoFilosofia"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Joga no Gol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jogaGol"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/brancoJogaGol"
        android:layout_alignStart="@+id/fbImage" />

    <TextView
        android:text="Posição preferida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posicaoPreferida"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/brancoPosicao"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPosicao"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/brancoPosicao" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="35dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/brancoFilosofia"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="35dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/brancoJogaGol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/filosofiaFixo"
        android:layout_alignStart="@+id/filosofiaFixo" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textJogaGol"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/brancoJogaGol"
        android:layout_alignStart="@+id/textPosicao" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFilosofia"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textJogaGol" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intMedalhasBB"
        android:textSize="24sp"
        android:layout_below="@+id/medalha2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>